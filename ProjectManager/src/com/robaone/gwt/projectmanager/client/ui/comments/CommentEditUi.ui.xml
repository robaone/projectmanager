<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		table.mytable td {
			vertical-align:top;
		}
	</ui:style>
	<g:HTMLPanel>
		<table class="{style.mytable}">
			<tbody>
				<tr>
					<td>
						<g:Image ui:field="profilepic"></g:Image>
					</td>
					<td>
						<g:InlineLabel ui:field="name"></g:InlineLabel>
						<span>Hours:</span>
						<g:TextBox ui:field="hours"></g:TextBox>
						<span>Date:</span>
						<g:SimplePanel ui:field="workdatepanel"></g:SimplePanel>
						<br/>
						<g:TextArea ui:field="comment" width="100%" height="230px"></g:TextArea>
						<br/>
						<g:Button ui:field="post">Post</g:Button>
					</td>
				</tr>
			</tbody>
		</table>
	</g:HTMLPanel>
</ui:UiBinder> 