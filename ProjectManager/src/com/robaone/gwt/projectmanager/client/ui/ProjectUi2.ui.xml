<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.project_name {
			font-size: 1.6em;
			color: #333;
			font-family: "Lucida Sans Unicode" font-weight : 100;
			font-style: italic;
		}
		
		.description {
			font-size: 10px;
			font-style: italic;
			font-family: Verdana, Geneva, sans-serif;
			color: #999;
			margin: 0px;
		}
		
		.right {
			text-align: right;
		}
		
		.top {
			vertical-align: top;
		}
		
		.priority {
			font-style: italic;
			font-family: "Lucida Sans Unicode";
			margin: 0px;
			font-size: 12px;
		}
	</ui:style>
	<g:HTMLPanel>
		<table width="100%">
			<tbody>
				<tr>
					<td>
						<g:InlineLabel ui:field="project_name" styleName="{style.project_name}"></g:InlineLabel>
						<p class="description"><g:InlineLabel ui:field="description"></g:InlineLabel></p>
					</td>
					<td class="right top">
						<p class="description">Due: <g:InlineLabel ui:field="due_date"></g:InlineLabel></p>
						<g:Label ui:field="priority" styleName="{style.priority}"></g:Label>
					</td>
				</tr>
			</tbody>
		</table>
	</g:HTMLPanel>
</ui:UiBinder> 