<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		table.mytable td {
			vertical-align:top;
		}
	</ui:style>
	<g:HTMLPanel>
	<table class="{style.mytable}">
			<tbody>
				<tr>
					<td>
						<g:Image ui:field="profilepic"></g:Image>
					</td>
					<td>
						<g:InlineLabel ui:field="name"></g:InlineLabel>
						<span>Hours:</span>
						<g:InlineLabel ui:field="hours"></g:InlineLabel>
						<span>Date:</span>
						<g:InlineLabel ui:field="workdate"></g:InlineLabel>
						<br/>
						<g:HTML ui:field="comment"></g:HTML>
						<br/>
						<g:Button ui:field="edit">Edit</g:Button>
						<g:Button ui:field="delete">Delete</g:Button>
					</td>
				</tr>
			</tbody>
		</table>
	</g:HTMLPanel>
</ui:UiBinder> 