<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		
	</ui:style>
	<g:HTMLPanel>
		<h1>Edit Profile</h1>
		<table>
			<tbody>
				<tr>
					<td>
						<g:Image ui:field="profile_image" />
					</td>
					<td>
						<g:FormPanel ui:field="picture_upload">
  							<g:VerticalPanel>
    							<g:Label>Upload a profile picture</g:Label>
								<g:FileUpload name="pic"></g:FileUpload>
								<g:Button ui:field="upload">Upload</g:Button>
  							</g:VerticalPanel>
						</g:FormPanel>
					</td>
				</tr>
			</tbody>
		</table>
		<hr style="width:95%;text-align:center" />
		<h3>Personal Info</h3>
		<table>
			<tbody>
				<tr>
					<td>First Name</td>
					<td>
						<g:TextBox ui:field="first_name" width="181px" />
					</td>
				</tr>
				<tr>
					<td>Last Name</td>
					<td>
						<g:TextBox ui:field="last_name" width="181px" />
					</td>
				</tr>
				<tr>
					<td>Phone Number</td>
					<td>
						<g:TextBox ui:field="phone_number"></g:TextBox>
					</td>
				</tr>
				<tr>
					<td>Zip Code</td>
					<td>
						<g:TextBox ui:field="zipcode" width="66px" />
					</td>
				</tr>
			</tbody>
		</table>
		<g:HTMLPanel>
			<g:FlowPanel ui:field="more_fields" />
		</g:HTMLPanel>
		<g:Button ui:field="update">Update</g:Button>
	</g:HTMLPanel>
</ui:UiBinder> 