<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
		.style1 {
			margin-right:7pt;
		}
	</ui:style>
	<g:HTMLPanel>
		<h1>Contractor Listing</h1>
		<g:FlowPanel ui:field="listing">
			<g:HTMLPanel ui:field="zip_entry">
				<h3>Please enter your zip code to see contractor listings in your area.</h3>
				<g:TextBox ui:field="zipcode" styleName="{style.style1}" />
				<g:Button styleName="{style.important}" ui:field="button" />
			</g:HTMLPanel>
		</g:FlowPanel>
		<g:VerticalPanel ui:field="list"></g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 