<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		h1.h1 {
			font-family: Arial;
			font-weight: normal;
			font-size: 1.1em;
			background-color: rgb(230, 230, 230);
			border-radius: 4px;
			text-shadow: -1px -1px 0 white;
		}
		
		table.project {
			border: 1 solid rgb(200, 200, 200);
			width: 100%;
			padding: 6px;
		}
		
		table.project td {
			
		}
		
		td.label {
			font-family: Arial;
			font-size: 1.1em;
			color: #666666;
		}
		
		td.top {
			vertical-align: top;
		}
		
		input.input {
			font-family: Arial;
			font-size: 14pt;
			width: 90%;
			border: 1px solid rgb(200, 200, 200);
		}
		
		input.date {
			font-family: Arial;
			font-size: 14pt;
			width: 120px;
			border: 1px solid rgb(200, 200, 200);
		}
		
		textarea.input {
			font-family: Arial;
			width: 90%;
			border: 1px solid rgb(200, 200, 200);
			height: 90px;
		}
	</ui:style>
	<g:HTMLPanel>
		<div style="background-color:white">
			<h1 class="{style.h1}">New Project</h1>
			<table cellpadding="0" cellspacing="0" class="{style.project}">
				<col style="width:175px" />
				<tbody>
					<tr>
						<td class="{style.label}">Project Name:</td>
						<td>
							<input class="{style.input}" type="text" />
						</td>
					</tr>
					<tr>
						<td class="{style.top} {style.label}">Description:</td>
						<td>
							<textarea class="{style.input}"></textarea>
						</td>
					</tr>
					<tr>
						<td class="{style.label}">Due Date:</td>
						<td>
							<input class="{style.date}" type="text" />
						</td>
					</tr>
					<tr>
						<td class="{style.label}">Estimated Hours:</td>
						<td>
							<input class="{style.date}" type="text" />
						</td>
					</tr>
					<tr>
						<td class="{style.label}">Tags:</td>
						<td>
							<input class="{style.input}" type="text" />
						</td>
					</tr>
					<tr>
						<td class="{style.label}">Assigned To:</td>
						<td>
							<input class="{style.input}" type="text" />
						</td>
					</tr>
					<tr>
						<td class="{style.label}">Important:</td>
						<td>
							<input type="checkbox" />
						</td>
					</tr>
					<tr>
						<td></td>
						<td>
							<button>Create Project</button>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 