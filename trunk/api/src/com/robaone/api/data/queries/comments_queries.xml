<?xml version="1.0" encoding="UTF-8"?>
<Report xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="Report.xsd">
  <ResultSet name="list">
    <Query>
      <PreparedStatement>select * from comments where referenceid = ? order by creation_date desc limit ?, ?</PreparedStatement>
      	<Parameter name="referenceid" type="string"></Parameter>
		<Parameter name="result_page" type="int"></Parameter>
		<Parameter name="result_limit" type="int"></Parameter>
    </Query>
  </ResultSet>
  <ResultSet name="list_count">
  	<Query>
  		<PreparedStatement>select count(1) from comments where referenceid = ?</PreparedStatement>
  		<Parameter name="referenceid" type="string"></Parameter>
  	</Query>
  </ResultSet>
  <ResultSet name="get">
  	<Query>
  		<PreparedStatement>select * from comments where referenceid = ? and idcomments = ?</PreparedStatement>
  		<Parameter name="referenceid" type="string"></Parameter>
  		<Parameter name="idcomments" type="int"/>
  	</Query>
  </ResultSet>
  <ResultSet name="get_count">
  	<Query>
  		<PreparedStatement>select count(1) from comments where referenceid = ? and idcomments = ?</PreparedStatement>
  		<Parameter name="referenceid" type="string"></Parameter>
  		<Parameter name="idcomments" type="int"/>
  	</Query>
  </ResultSet>
  <ResultSet name="list_filtered">
  	<Query>
  		<PreparedStatement>select * from comments where referenceid = ? and comment like ? order by creation_date desc limit ?, ?</PreparedStatement>
		<Parameter name="referenceid" type="string"></Parameter>
		<Parameter name="filter" type="string"></Parameter>
		<Parameter name="result_page" type="int"></Parameter>
		<Parameter name="result_limit" type="int"></Parameter>
  	</Query>
  </ResultSet>
  <ResultSet name="count_filtered">
  	<Query>
  		<PreparedStatement>select count(1) from comments where referenceid = ? and comment like ?</PreparedStatement>
  		<Parameter name="referenceid" type="string"></Parameter>
		<Parameter name="filter" type="string"></Parameter>
  	</Query>
  </ResultSet>
  <ResultSet name="delete">
  	<Query>
  		<PreparedStatement>delete from comments where referenceid = ? and idcomments = ?</PreparedStatement>
  		<Parameter name="referenceid" type="string"></Parameter>
		<Parameter name="idcomments" type="int"></Parameter>
  	</Query>
  </ResultSet>
</Report>
