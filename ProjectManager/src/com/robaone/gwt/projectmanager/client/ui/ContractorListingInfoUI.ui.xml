<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>
    <g:Label styleName="{style.important}" ui:field="name"></g:Label>
    <g:Label ui:field="location"></g:Label>
    <g:FlexTable ui:field="fields">
    </g:FlexTable>
	</g:HTMLPanel>
</ui:UiBinder> 