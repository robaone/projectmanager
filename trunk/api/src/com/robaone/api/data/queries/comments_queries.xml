<?xml version="1.0" encoding="UTF-8"?>
<Report xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="Report.xsd">
  <ResultSet name="list">
    <Query>
      <PreparedStatement>select * from comments where referenceid = ? order by creation_date desc limit ?, ?</PreparedStatement>
      	<Parameter name="referenceid" type="int"></Parameter>
		<Parameter name="result_page" type="int"></Parameter>
		<Parameter name="result_limit" type="int"></Parameter>
    </Query>
  </ResultSet>
  <ResultSet name="count">
  	<Query>
  		<PreparedStatement>select count(1) from clients where idowner = ?</PreparedStatement>
  		<Parameter name="owner" type="int"></Parameter>
  	</Query>
  </ResultSet>
  <ResultSet name="get">
  	<Query>
  		<PreparedStatement>select clients.idclients,user.* from clients,user where clients.iduser = user.iduser and idowner = ? and idclients = ?</PreparedStatement>
  		<Parameter name="owner" type="int"></Parameter>
  		<Parameter name="idclients" type="int"/>
  	</Query>
  </ResultSet>
  <ResultSet name="get_count">
  	<Query>
  		<PreparedStatement>select count(1) from clients where idowner = ? and idclients = ?</PreparedStatement>
  		<Parameter name="owner" type="int"></Parameter>
  		<Parameter name="idclients" type="int"/>
  	</Query>
  </ResultSet>
  <ResultSet name="list_filtered">
  	<Query>
  		<PreparedStatement>select clients.idclients,user.* from clients,user where clients.iduser
  		 = user.iduser and idowner = ? and (user.last_name like ? or user.first_name like ?) 
  		 order by last_name,first_name limit ?, ?</PreparedStatement>
		<Parameter name="owner" type="int"></Parameter>
		<Parameter name="filter" type="string"></Parameter>
		<Parameter name="filter" type="string"></Parameter>
		<Parameter name="result_page" type="int"></Parameter>
		<Parameter name="result_limit" type="int"></Parameter>
  	</Query>
  </ResultSet>
  <ResultSet name="count_filtered">
  	<Query>
  		<PreparedStatement>select count(1) from clients,user where 
  		clients.iduser = user.iduser and idowner = ?
  		and (user.last_name like ? or user.first_name like ?)</PreparedStatement>
  		<Parameter name="owner" type="int"></Parameter>
		<Parameter name="filter" type="string"></Parameter>
		<Parameter name="filter" type="string"></Parameter>
  	</Query>
  </ResultSet>
</Report>
