<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		
	</ui:style>
	<g:HTMLPanel>
		<h1>Edit Profile</h1>
		<table>
			<tbody>
				<tr>
					<td>
						<img src="profilepicture.png" />
					</td>
					<td>
						<div>Upload a profile picture</div>
						<div>
							<input type="text" />
							<button>Browse</button>
						</div>
						<div>
							<input type="button" value="Upload" />
						</div>
					</td>
				</tr>
			</tbody>
		</table>
		<hr style="width:95%;text-align:center" />
		<h3>Personal Info</h3>
		<table>
			<tbody>
				<tr>
					<td>First Name</td>
					<td>
						<input type="text" style="width: 181px" />
					</td>
				</tr>
				<tr>
					<td>Last Name</td>
					<td>
						<input type="text" style="width: 181px" />
					</td>
				</tr>
				<tr>
					<td>Phone Number</td>
					<td>
						<input type="text" />
						<input type="text" style="margin-left:7px; width: 46px;" />
					</td>
				</tr>
				<tr>
					<td>Zip Code</td>
					<td>
						<input type="text" style="width: 66px" />
					</td>
				</tr>
			</tbody>
		</table>
		<g:HTMLPanel>
			<g:FlowPanel ui:field="more_fields" />
		</g:HTMLPanel>
		<input type="button" value="Update" />
	</g:HTMLPanel>
</ui:UiBinder> 